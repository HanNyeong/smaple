<?xml version="1.0" encoding="utf-8"?>



    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <TextView android:text="My Fun Chat 01"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textSize="8pt"
                      android:textColor="#ffff7825"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginTop="51dp"
                      android:layout_marginRight="8dp"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginLeft="8dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:id="@+id/textView"/>
            <TextView android:text="Host :"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="36dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView2"
                      android:layout_marginRight="8dp"
                      android:layout_marginLeft="8dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintHorizontal_bias="0.413"
                      app:layout_constraintRight_toLeftOf="@+id/chat_port"
                      android:id="@+id/textView3"/>
            <EditText android:id="@+id/chat_host"
                      android:text="192.168.0.34"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView"
                      android:layout_marginLeft="8dp"
                      app:layout_constraintLeft_toLeftOf="@+id/textView"
                      android:layout_marginRight="8dp"
                      app:layout_constraintRight_toRightOf="@+id/textView"/>
            <TextView android:text="Port :"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      app:layout_constraintRight_toLeftOf="@+id/chat_host"
                      android:layout_marginRight="8dp"
                      android:layout_marginLeft="8dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:layout_marginTop="20dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView"
                      app:layout_constraintHorizontal_bias="0.558"
                      android:id="@+id/textView2"/>
            <EditText android:id="@+id/chat_port"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="9999"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/chat_host"
                      android:layout_marginLeft="8dp"
                      app:layout_constraintLeft_toLeftOf="@+id/chat_host"
                      android:layout_marginRight="8dp"
                      app:layout_constraintRight_toRightOf="@+id/chat_host"/>
            <TextView android:text="NicName :"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="36dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView3"
                      app:layout_constraintRight_toLeftOf="@+id/chat_name"
                      android:layout_marginRight="8dp"
                      android:layout_marginLeft="8dp"
                      app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText android:id="@+id/chat_name"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="뉙크"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/chat_port"
                      android:layout_marginLeft="8dp"
                      app:layout_constraintLeft_toLeftOf="@+id/chat_port"
                      android:layout_marginRight="0dp"
                      app:layout_constraintRight_toRightOf="@+id/chat_port"/>
            <Button android:layout_span="2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/chat_btn"
                    android:text="Connect"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/chat_name"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintVertical_bias="0.282"/>
    </android.support.constraint.ConstraintLayout>
